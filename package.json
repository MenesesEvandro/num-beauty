{
  "name": "num-beauty-workspace",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm -r run build",
    "build:prod": "pnpm -r run build:prod",
    "clean": "pnpm -r run clean",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "format": "pnpm -r run format",
    "changeset": "pnpm dlx @changesets/cli",
    "version-packages": "pnpm dlx @changesets/cli version",
    "release": "pnpm dlx @changesets/cli publish",
    "docs:dev": "pnpm --filter @num-beauty/docs dev",
    "docs:build": "pnpm --filter @num-beauty/docs build",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "husky": "^7.0.0"
  }
}